<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card" >

        <com.jacklin.utils.CircleImageView
            android:id="@+id/iv_myphoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/kaka_40_dip"
            android:layout_marginTop="14dp"
            android:onClick="clickiv"
            android:src="@drawable/addphoto"
            tools:ignore="ContentDescription"  />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_myhuaban"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_50_dip"
        android:layout_marginTop="@dimen/kaka_15_dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_myhuaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:src="@drawable/mycenter_icon_r1_c2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_wo_huaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:layout_toEndOf="@id/iv_myhuaban"
            android:layout_toRightOf="@id/iv_myhuaban"
            android:text="我的画板"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_50_dip"
        android:layout_marginTop="@dimen/kaka_15_dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_mybanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:src="@drawable/mycenter_icon_r3_c1"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_mybanzhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:layout_toEndOf="@id/iv_mybanzhu"
            android:layout_toRightOf="@id/iv_mybanzhu"
            android:text="帮助反馈"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_50_dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_mygengxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:src="@drawable/mycenter_icon_r5_c2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_mygengxin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:layout_toEndOf="@id/iv_mygengxin"
            android:layout_toRightOf="@id/iv_mygengxin"
            android:text="检查更新"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_50_dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_myguanyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:src="@drawable/mycenter_icon_r5_c2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_myguanyu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_10_dip"
            android:layout_marginStart="@dimen/kaka_10_dip"
            android:layout_toEndOf="@id/iv_myguanyu"
            android:layout_toRightOf="@id/iv_myguanyu"
            android:text="关于趣聊"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_40_dip"
        android:layout_marginTop="@dimen/kaka_35_dip"
        android:layout_marginLeft="@dimen/kaka_5_dip"
        android:layout_marginRight="@dimen/kaka_5_dip"
        android:background="#ff0000"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

</LinearLayout>