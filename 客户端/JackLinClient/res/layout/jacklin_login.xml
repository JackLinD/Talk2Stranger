<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kaka_50_dip"
        android:src="@drawable/login_logo"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kaka_40_dip"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kaka_30_dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_login_input_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kaka_40_dip"
            android:scaleType="fitXY"
            android:src="@drawable/login_input_phone"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="@dimen/kaka_200_dip"
            android:layout_height="@dimen/kaka_40_dip"
            android:layout_toEndOf="@id/iv_login_input_phone"
            android:layout_toRightOf="@id/iv_login_input_phone"
            android:background="@null"
            android:hint="手机号"
            android:inputType="phone"
            android:paddingEnd="0dp"
            android:paddingLeft="@dimen/kaka_8_dip"
            android:paddingRight="0dp"
            android:paddingStart="@dimen/kaka_8_dip"
            android:singleLine="true"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kaka_40_dip"
        android:layout_below="@id/rl_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kaka_15_dip"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_login_input_keyword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kaka_40_dip"
            android:scaleType="fitXY"
            android:src="@drawable/login_input_keyword"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="@dimen/kaka_200_dip"
            android:layout_height="@dimen/kaka_40_dip"
            android:layout_toEndOf="@id/iv_login_input_keyword"
            android:layout_toRightOf="@id/iv_login_input_keyword"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingEnd="0dp"
            android:paddingLeft="@dimen/kaka_8_dip"
            android:paddingRight="0dp"
            android:paddingStart="@dimen/kaka_8_dip"
            android:singleLine="true"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="@dimen/kaka_220_dip"
        android:layout_height="@dimen/kaka_50_dip"
        android:layout_below="@id/rl_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kaka_50_dip"
        android:background="@drawable/login_btn1"
        android:text="登录"
        android:onClick="click_login"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/rl_regist"
        android:layout_width="@dimen/kaka_220_dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/kaka_15_dip" >

        
        <Button
            android:id="@+id/bt_regist"
            android:layout_width="@dimen/kaka_80_dip"
            android:layout_height="@dimen/kaka_35_dip"
            android:layout_marginLeft="@dimen/kaka_30_dip"
            android:layout_marginStart="@dimen/kaka_30_dip"
            android:layout_marginRight="@dimen/kaka_5_dip"
            android:layout_marginEnd="@dimen/kaka_5_dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/register_btn1"
            android:scaleType="fitXY"
            android:text="注册"
            android:onClick="click_register"
            android:textColor="#0099FF"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
        
        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/bt_regist"
            android:layout_toStartOf="@id/bt_regist"
            android:layout_centerVertical="true"
            android:text="还没有账号？"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
        
    </RelativeLayout>

</RelativeLayout>